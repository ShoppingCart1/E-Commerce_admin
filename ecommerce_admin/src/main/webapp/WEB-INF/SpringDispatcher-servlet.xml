<beans xmlns="http://www.springframework.org/schema/beans"
   xmlns:context="http://www.springframework.org/schema/context"
   xmlns:mvc="http://www.springframework.org/schema/mvc"
   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
   xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
   http://www.springframework.org/schema/mvc http://www.springframework.org/schema/mvc/spring-mvc-4.0.xsd
   http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.0.xsd">


   <context:component-scan base-package = "com.mivim.admin.controller" />


   <bean class = "org.springframework.web.servlet.view.InternalResourceViewResolver">
      <property name = "prefix" value = "/WEB-INF/modules" />
      <property name = "suffix" value = ".jsp" />
   </bean>
   
   
   <bean id="adminLoginService" class="com.mivim.admin.servicesimplementations.AdminLoginService" autowire="byName" />
   <bean id="adminAddItemService" class="com.mivim.admin.servicesimplementations.AdminAddItemService" autowire="byName" />
   <bean id="adminAddItemDao" class="com.mivim.admin.servicesimplementations.AdminAddItemDao" autowire="byName" />
   <bean id="adminLoginDao" class="com.mivim.admin.servicesimplementations.AdminLoginDao" autowire="byName" />
  
   
<!--    <mvc:resources mapping = "/modules/**" location = "/WEB-INF/modules/login_modules/" /> -->
<!--    <mvc:annotation-driven/> -->


</beans>